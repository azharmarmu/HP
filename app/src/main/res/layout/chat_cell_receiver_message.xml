<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/you_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5dp">

    <ImageView
        android:id="@+id/arrow_receiver"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/arrow_bg_you" />

    <RelativeLayout
        android:id="@+id/message_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_minus_10dp"
        android:layout_marginTop="@dimen/_1dp"
        android:layout_toEndOf="@+id/arrow_receiver"
        android:background="@drawable/rounder_corner_me"
        android:maxWidth="@dimen/_300dp"
        android:minWidth="@dimen/_85dp"
        android:padding="@dimen/_8dp">

        <TextView
            android:id="@+id/message_receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_you_msg"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/message_receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_container"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_marginTop="@dimen/_5dp"
        android:layout_toEndOf="@+id/arrow_receiver"
        android:gravity="center_horizontal"
        android:text="12:45 PM"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_12sp" />
</RelativeLayout>